<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>StudentHome</servlet-name>
        <servlet-class>view.StudentHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacultyHome</servlet-name>
        <servlet-class>view.FacultyHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHome</servlet-name>
        <servlet-class>view.AdminHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserType</servlet-name>
        <servlet-class>controller.UserType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>view.error</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseInfo</servlet-name>
        <servlet-class>view.CourseInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentHome</servlet-name>
        <url-pattern>/StudentHome.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyHome</servlet-name>
        <url-pattern>/FacultyHome.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHome</servlet-name>
        <url-pattern>/AdminHome.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserType</servlet-name>
        <url-pattern>/UserType.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseInfo</servlet-name>
        <url-pattern>/CourseInfo.view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/html/Index.html</welcome-file>
    </welcome-file-list>
</web-app>
